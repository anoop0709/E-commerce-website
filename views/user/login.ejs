    <div class="wrap">
        <h5 class="text-center mb-4 text-danger">Login Now</h5>
        <div class="login p-5 bg-dark mx-auto mw-100 row  ">
            <div class="col-md-6">
                <img src="/images/team4.jpg" alt="">
            </div>
            <form id="login" class="col-md-6 px-5 ">
                <h5 id="verifymsg" class="text-center"></h5>
                <div class="form-group">
                    <label class="mb-2">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        placeholder="" name="email">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                        else.</small>
                    <div class="email error text-danger mt-3 h5"></div>
                </div>
                <div class="form-group">
                    <label class="mb-2">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder=""
                        name="password">
                    <div class="password error text-danger mt-3 h5"></div>
                </div>
                <div class="text-right mt-5">
                    <button id="submt" class="btn btn-danger mb-4">Sign In</button>
                    <button id="signwithotp" class="btn btn-danger mb-4 ">Sign In with OTP</button>

                    <button id="verifyaccount" class="btn btn-danger mb-4" style="display: none;"> verify
                        Account</button>

                </div>



            </form>
            <form id="enterphone" style="display: none;" class="col-md-6 px-5">
                <div class="form-group">
                    <label class="mb-2">Email address</label>
                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder=""
                        name="email">
                </div>
                <div class="form-group">
                    <label class="mb-2 mt-2">Enter phone number</label>
                    <input type="tel" class="form-control" id="phoneinp" placeholder="" name="phoneinp">
                    <div id="phoneerror" class="text-danger mt-5" style="display: none;">Please enter a valid
                        phonenumber</div>
                </div>
                <div class="text-right mt-5">
                    <button id="phonesubmt" class="btn btn-danger mb-4  ">Send OTP</button>


                </div>


            </form>
            <form id="otp" style="display: none;" class="col-md-6 px-5">
           <div id="counter" class="text-white"></div>
                <div class="form-group">

                    <input type="text" class="form-control" id="otpinp" placeholder="" name="otpvalue">
                    <label class="mb-2 mt-2">Enter OTP for verification</label>

                </div>
                <div class="d-flex align-items-start">
                    <div class="" id="sendagain" style="display: none;width: fit-content;">
                        <button id="phonesubmt" class="btn btn-danger mb-4  ">Send Again</button>
    
    
                    </div>
                    <div class="d-flex align-items-start mx-5" style="width: fit-content;">
                        <!-- Button HTML (to Trigger Modal) -->
                        <a href="#myModal" class="btn btn-danger text-white" data-toggle="modal" id="otpbtn">Verify</a>
                    </div>
                </div>
                





            </form>
        </div>
        <!---->
    </div>
    <div id="myModal" class="modal fade">
        <div class="modal-dialog modal-confirm">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="icon-box">
                        <i class="material-icons">&#xE876;</i>
                    </div>
                </div>
                <div class="modal-body">
                    <p class="text-center responsetext"></p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-success btn-block" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>
</div>
