<script>

    const sendAgain = document.getElementById('sendagain');
    const counterdiv = document.getElementById('counter');
    const form = document.querySelector('#login');
    const btn = document.getElementById('submt');
    const verifybtn = document.getElementById('verifyaccount');
    const phonesubmtbtn = document.getElementById('phonesubmt');
    const phoneInpform = document.getElementById('enterphone');
    const otpform = document.getElementById('otp');
    const otpbtn = document.getElementById('otpbtn');
    const Signwithotp = document.getElementById('signwithotp');
    const phoneError = document.getElementById("phoneerror");
    let emailValue;
    let phonenumberValue;

    Signwithotp.addEventListener('click', (e) => {
        e.preventDefault();
        form.style.display = 'none';
        phoneInpform.style.display = 'block';

        phonesubmtbtn.addEventListener('click', async (e) => {
            e.preventDefault();
            const phoneNumber = phoneInpform.phoneinp.value;
            const email = phoneInpform.email.value;
            emailValue = email;
            phonenumberValue = phoneNumber;
            const length = phoneNumber.length;
            console.log(length);

            if (length != 10 || isNaN(phoneNumber) || phoneNumber == '') {
                phoneError.style.display = 'block';
            } else {
                const response = await fetch('/sendnotification', {
                    method: 'POST',
                    body: JSON.stringify({ phone: phoneNumber }),
                    headers: { 'Content-Type': 'application/json' }
                }).catch(e => console.log(e));

                console.log(response.ok);
                if (response.ok) {

                    phoneInpform.style.display = 'none';
                    otpform.style.display = 'block';
                    startCountdown(60);
                    function startCountdown(seconds) {
                        let counter = seconds;
                        const myInterval = setInterval(() => {
                            console.log(counter);
                            counter--;
                            counterdiv.innerHTML = "0:"+counter+":00";
                            if (counter == 0) {
                                clearInterval(myInterval);
                                sendAgain.style.display = 'block';
                                sendAgain.addEventListener('click', async (e) => {
                                    e.preventDefault();
                                    await fetch('/sendnotification', {
                                        method: 'POST',
                                        body: JSON.stringify({ phone: phonenumberValue }),
                                        headers: { 'Content-Type': 'application/json' }
                                    })
                                })
                            }
                        }, 1000);


                    }
                }
            }
        })

        otpbtn.addEventListener('click', async (e) => {
            e.preventDefault();

            const otpInpValue = otpform.otpvalue.value;
            const responseText = document.querySelector('.responsetext');

            const otpData = {
                phonenumber: phonenumberValue,
                email: emailValue,
                otp: otpInpValue
            };
            try {

                const response = await fetch('/signin-with-otp', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' },
                    body: JSON.stringify(otpData)

                });
                console.log(response);
                const check = await response.json();
                console.log(check);
                // 


                responseText.textContent = check.status;
                console.log(check);
                otpform.style.display = 'none';
                //responseText.style.display = 'block';

                if (check.user) {
                    const user = check.user;
                    location.assign('/');
                }

            } catch { (e => console.log(e)) };


        });




    })

    btn.addEventListener('click', async (e) => {
        e.preventDefault();
        const emailError = document.querySelector('.email');
        const passwordError = document.querySelector('.password');

        emailError.textContent = '';
        passwordError.textContent = '';

        const email = form.email.value;
        const password = form.password.value;

        try {
            const res = await fetch('/login', {
                method: 'POST',
                body: JSON.stringify({ email, password }),
                headers: { 'Content-Type': 'application/json' }

            });

            const data = await res.json();
            console.log(data);
            if (data.errors) {

                emailError.textContent = data.errors.email;
                passwordError.textContent = data.errors.password;
                if (data.errors.email == 'Your account is not verified') {
                    const verifyMsg = document.getElementById('verifymsg');
                    verifyMsg.textContent = "Please verify your account with verify button";
                    verifybtn.style.display = 'block';
                }
                verifybtn.addEventListener('click', (e) => {
                    e.preventDefault();

                    form.style.display = 'none';
                    phoneInpform.style.display = 'block';

                })
                phonesubmtbtn.addEventListener('click', async (e) => {
                    e.preventDefault();
                    const phoneNumber = phoneInpform.phoneinp.value;
                    const email = phoneInpform.email.value;
                    emailValue = email;
                    phonenumberValue = phoneNumber;
                    const response = await fetch('/sendnotification', {
                        method: 'POST',
                        body: JSON.stringify({ phone: phoneNumber }),
                        headers: { 'Content-Type': 'application/json' }
                    }).catch(e => console.log(e));

                    if (response.ok) {
                        phoneInpform.style.display = 'none';
                        otpform.style.display = 'block';
                    }
                })
                otpbtn.addEventListener('click', async (e) => {
                    e.preventDefault();

                    const otpInpValue = otpform.otpvalue.value;
                    const responseText = document.querySelector('.responsetext');

                    const otpData = {
                        phonenumber: phonenumberValue,
                        email: emailValue,
                        otp: otpInpValue
                    };
                    try {

                        const response = await fetch('/verify-otp', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' },
                            body: JSON.stringify(otpData)

                        });
                        console.log(response + "hoi");
                        const check = await response.json();
                        console.log(check + "hai");
                        // 


                        responseText.textContent = check;
                        console.log("hai please print " + check);
                        otpform.style.display = 'none';
                        //responseText.style.display = 'block';

                        setTimeout(() => {
                            location.assign('/login');

                        }, 3000);




                    } catch { (e => console.log(e)) };


                });


            }
            if (data.user) {
                const user = data.user;
                location.assign('/');
            }

        } catch (err) {
            console.log(err);
        }

    })


</script>