    <div class="wrap mx-auto">

<form id="signup" class="col-md-6 px-5" method="post" action="/userprofileedit/<%= user._id %>">
                
    <div class="form-group">
        <label class="mb-2">Full Name</label>
        <input type="text" class="form-control" id="fName" placeholder="" name="fname" value="<%= user.fname %>" >
   
       
    </div>
    
    <div class="form-group">
        <label class="mb-2">Email</label>
        <input type="text" class="form-control" id="email" aria-describedby="emailHelp" name="email" placeholder="" value="<%= user.email %>" >
        
       
    </div>
    
    <div class="form-group">
        <label class="mb-2">Phone number</label>
        <input type="tel" class="form-control" id="phone" name="phone" placeholder="" value="<%= user.phone %>" >
        
       
    </div>
    <div class="form-group">
        <label class="mb-2">Housename or number</label>
        <input type="text" class="form-control" id="hname" name="housename" placeholder="" >
        <label class="mb-2">Street name</label>
        <input type="text" class="form-control" id="strname" name="streetname" placeholder="" >
        <label class="mb-2">City</label>
        <input type="text" class="form-control" id="city" name="city" placeholder="" >
        <label class="mb-2">State</label>
        <input type="text" class="form-control" id="state" name="state" placeholder="" >
        <label class="mb-2">Pincode</label>
        <input type="text" class="form-control" id="pincode" name="pincode" placeholder="" >
        
        
    </div>
    <div class="text-right mt-5">
    <button id="subbtn" class="btn  mb-4" style="background-color: #dc3545;">update </button>
</div>
</form>
</div>
